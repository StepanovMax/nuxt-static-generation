{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "types": ["vite/client"],
    "paths": {
      "@/*": ["./*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": [
    "@/components/**/*.js",
    "@/components/**/*.ts",
    "@/components/**/*.tsx",
    "@/components/**/*.vue",
    "@/pages/**/*.js",
    "@/pages/**/*.ts",
    "@/pages/**/*.tsx",
    "@/pages/**/*.vue"
  ],
  "exclude": ["node_modules"]
}
